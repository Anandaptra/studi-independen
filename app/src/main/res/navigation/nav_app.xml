<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_app"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.rogo.final_project.view.fragment.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_homeFragment2"
            app:destination="@id/homeFragment2" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.rogo.final_project.view.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.rogo.final_project.view.fragment.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_sendOtpFragment"
            app:destination="@id/sendOtpFragment" />
    </fragment>
    <fragment
        android:id="@+id/sendOtpFragment"
        android:name="com.rogo.final_project.view.fragment.SendOtpFragment"
        android:label="fragment_send_otp"
        tools:layout="@layout/fragment_send_otp" />
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.rogo.final_project.view.fragment.ResetPasswordFragment"
        android:label="fragment_reset_password"
        tools:layout="@layout/fragment_reset_password" />
    <fragment
        android:id="@+id/homeFragment2"
        android:name="com.rogo.final_project.view.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment2_to_notifFragment2"
            app:destination="@id/notifFragment2" />
        <action
            android:id="@+id/action_homeFragment2_to_akunNonLoginFragment2"
            app:destination="@id/akunNonLoginFragment2" />
        <action
            android:id="@+id/action_homeFragment2_to_historyNonLoginFragment2"
            app:destination="@id/historyNonLoginFragment2" />
    </fragment>
    <fragment
        android:id="@+id/notifFragment2"
        android:name="com.rogo.final_project.view.fragment.NotifFragment"
        android:label="fragment_notif"
        tools:layout="@layout/fragment_notif" />
    <fragment
        android:id="@+id/akunNonLoginFragment2"
        android:name="com.rogo.final_project.view.fragment.AkunNonLoginFragment"
        android:label="fragment_akun_non_login"
        tools:layout="@layout/fragment_akun_non_login" >
        <action
            android:id="@+id/action_akunNonLoginFragment2_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/historyNonLoginFragment2"
        android:name="com.rogo.final_project.view.fragment.HistoryNonLoginFragment"
        android:label="fragment_history_non_login"
        tools:layout="@layout/fragment_history_non_login" >
        <action
            android:id="@+id/action_historyNonLoginFragment2_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>