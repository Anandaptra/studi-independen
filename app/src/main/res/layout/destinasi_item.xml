<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="167dp"
        android:layout_height="194dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivDestinasi"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/image_destinasi"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
            
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvDestinasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jakarta -> Bangkok"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="9dp"
                android:fontFamily="@font/poppins_bold"
                app:layout_constraintTop_toBottomOf="@id/ivDestinasi"
                app:layout_constraintStart_toStartOf="parent"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tipePesawat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/airasia"
                android:textColor="@color/darkblue05"
                android:textSize="10sp"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginStart="9dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDestinasi"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 - 30 Maret 2023"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginStart="9dp"
                app:layout_constraintTop_toBottomOf="@id/tipePesawat"
                app:layout_constraintStart_toStartOf="parent"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvMulaiDari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mulai dari IDR 950.000"
                android:textSize="12sp"
                android:textColor="@color/alert01"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginStart="9dp"
                app:layout_constraintTop_toBottomOf="@id/tvTanggal"
                app:layout_constraintStart_toStartOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>