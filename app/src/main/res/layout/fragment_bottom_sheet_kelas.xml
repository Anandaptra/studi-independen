<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragment.BottomSheetKelasFragment">
        <ImageView
        android:id="@+id/btn_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:src="@drawable/close"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        />

    <View
        android:id="@+id/view_grid"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/neutral_02"
        android:layout_marginTop="14dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_kelas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/sheetkelas_item"/>

    <Button
        android:id="@+id/btn_simpan"
        style="@style/ButtonPrimarySmall"
        android:backgroundTint ="@color/darkblue_04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="15dp" />

</LinearLayout>